<div class="container">
    <div class="post">
        <h1>{{post.title}}</h1>
        <p class="meta">
            Posted in
            <a href="/categories/show/{{post.category}}">{{post.category}}</a>
            <by>{{post.contributor}}</by>
            <on>{{post.date}}</on>
        </p>
        <img class="homeimg" src="/images/{{post.mainimage}}" alt="img">
        {{{post.body}}}
        <br>
        <hr>
        {{#if post.comments}}
            <h3>Comments</h3>
            {{#each post.comments}}
                <div class="comment">
                    <p class="comment-name">{{this.name}}</p>
                    <p class="comment-name">{{this.body}}</p>
                </div>
            {{/each}}
        {{/if}}
        <h3>Add Comment</h3>
        {{#if errors}}
            {{#each errors}}
                <ul class="errors">
                    <li class="alert alert-danger">{{this.msg}}</li>
                </ul>
            {{/each}}
        {{/if}}
        <form class="comment-form" method="post" action="/posts/addcomment">
            <input name="postid" type="hidden" value="{{post._id}}">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" name="name">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="email" name="email">
            </div>
            <div class="form-group">
                <label>Comment</label>
                <textarea class="form-control" type="text" name="body"></textarea>
            </div>
            <br>
            <input class="btn btn-default" type="submit" name="submit" value="Add Comment">
        </form>
    </div>
</div>