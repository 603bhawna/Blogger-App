<div class="container">
<h1>{{title}}</h1>
<ul class="errors">
    {{#if errors}}
        {{#each error}}
            <li class="alert alert-danger">{{error.msg}}</li>
        {{/each}}
    {{/if}}
</ul>
<form method="post" action="/posts/add" enctype="multipart/form-data">
    <div class="form-group">
        <label><strong>Title:</strong></label>
        <input class="form-control" name="title" type="text">
    </div>
    <div class="form-group">
        <label><strong>Category:</strong></label>
        <select class="form-control" name="category" >
            {{# each categories}}
                <option value="{{this.name}}">{{this.name}}</option>
            {{/ each}}
        </select>
    </div>
    <div class="form-group">
        <label><strong>Body:</strong></label><br><br>
        <textarea class="form-control" name="body" id="body" ></textarea>
    </div>
    <br>
    <div class="form-group">
        <label><strong>Main Image:</strong></label>
        <input class="form-control" name="mainimage" type="file">
    </div>
    <div class="form-group">
        <label><strong>Contributor:</strong></label>
        <input class="form-control" name="contributor" type="text">
    </div>
    <input class="btn btn-default" name="submit" type="submit" value="Save">
    <script src="/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace('body')</script>
</form>
</div>